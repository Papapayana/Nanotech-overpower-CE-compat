<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ==================== MAIN NANOTECH AMMO ==================== -->
  <ThingCategoryDef>
    <defName>Ammo_Nanotech</defName>
    <label>nanotech cartridge</label>
    <parent>AmmoRifles</parent>
    <iconPath>Things/Ammo/Charged/MediumIon</iconPath>
  </ThingCategoryDef>

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_Nanotech</defName>
    <label>nanotech cartridge</label>
    <ammoTypes>
      <Ammo_NanoblasterBullet>CE_Nanobullet</Ammo_NanoblasterBullet>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>

  <ThingDef Class="CombatExtended.AmmoDef" Name="Ammo_NanoblasterBulletBase" ParentName="SmallAmmoBase" Abstract="True">
    <description>Extremely powerful nanotech bullet.</description>
    <statBases>
      <Mass>0.001</Mass>
      <Bulk>0.001</Bulk>
    </statBases>
    <thingCategories>
      <li>Ammo_Nanotech</li>
    </thingCategories>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="Ammo_NanoblasterBulletBase">
    <defName>Ammo_NanoblasterBullet</defName>
    <label>nanotech cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Ion</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.1</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
    <cookOffProjectile>CE_Nanobullet</cookOffProjectile>
  </ThingDef>

  <ThingDef Name="CE_NanobulletBase" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>Bullet</damageDef>
      <speed>180</speed>
      <dropsCasings>false</dropsCasings>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="CE_NanobulletBase">
    <defName>CE_Nanobullet</defName>
    <label>nanotech bullet</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>200</damageAmountBase>
      <armorPenetrationSharp>500</armorPenetrationSharp>
      <armorPenetrationBlunt>500</armorPenetrationBlunt>
    </projectile>
  </ThingDef>

  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_Nanotech</defName>
    <label>make nanotech cartridge x500</label>
    <jobString>Making nanotech cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>NT_Nanobots</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>NT_Nanobots</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_NanoblasterBullet>500</Ammo_NanoblasterBullet>
    </products>
    <workAmount>1</workAmount>
    <recipeUsers>
      <li>Nanofabricator</li>
    </recipeUsers>
  </RecipeDef>


  <!-- ==================== EMP NANOTECH AMMO ==================== -->
  <ThingCategoryDef>
    <defName>Ammo_EMPNanotech</defName>
    <label>EMP nanotech cartridge</label>
    <parent>AmmoRifles</parent>
    <iconPath>Things/Ammo/Charged/MediumIon</iconPath>
  </ThingCategoryDef>

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_EMPNano</defName>
    <label>EMP nanotech cartridge</label>
    <ammoTypes>
      <Ammo_EMPNano>CE_EMPNano</Ammo_EMPNano>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>

  <ThingDef Class="CombatExtended.AmmoDef" Name="Ammo_EMPNanoBase" ParentName="SmallAmmoBase" Abstract="True">
    <description>Nanotech projectile designed to emit EMP effects on impact.</description>
    <statBases>
      <Mass>0.002</Mass>
      <Bulk>0.002</Bulk>
    </statBases>
    <thingCategories>
      <li>Ammo_EMPNanotech</li>
    </thingCategories>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="Ammo_EMPNanoBase">
    <defName>Ammo_EMPNano</defName>
    <label>EMP nanotech cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Ion</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.25</MarketValue>
    </statBases>
    <ammoClass>Energy</ammoClass>
    <cookOffProjectile>CE_EMPNano</cookOffProjectile>
  </ThingDef>

  <ThingDef Name="CE_EMPNanoBase" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>EMP</damageDef>
      <speed>200</speed>
      <dropsCasings>false</dropsCasings>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="CE_EMPNanoBase">
    <defName>CE_EMPNano</defName>
    <label>EMP nanotech bullet</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>50</damageAmountBase>
      <armorPenetrationBlunt>50</armorPenetrationBlunt>
      <armorPenetrationSharp>50</armorPenetrationSharp>
      <damageDef>EMP</damageDef>
      <EMP>1</EMP>
      <speed>200</speed>
      <explosionDef>Explosion_EMP_AOE</explosionDef>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseExplosionCE">
    <defName>Explosion_EMP_AOE</defName>
    <label>EMP blast</label>
    <graphicData>
      <texPath>Things/Effects/EMP_Blast</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <explosion>
      <damageType>EMP</damageType>
      <damageAmount>25</damageAmount>
      <armorPenetration>50</armorPenetration>
      <radius>5</radius>
      <soundExplosion>EMP_Explosion_Sound</soundExplosion>
      <soundHitPawn>EMP_Hit_Sound</soundHitPawn>
      <soundHitBuilding>EMP_Hit_Sound</soundHitBuilding>
      <canAffectPawns>true</canAffectPawns>
      <canAffectBuildings>true</canAffectBuildings>
      <EMP>1</EMP>
    </explosion>
  </ThingDef>

  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_EMPNano</defName>
    <label>make EMP nanotech cartridge x100</label>
    <jobString>Assembling EMP nanotech cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>NT_Nanobots</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>NT_Nanobots</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_EMPNano>100</Ammo_EMPNano>
    </products>
    <workAmount>2</workAmount>
    <recipeUsers>
      <li>Nanofabricator</li>
    </recipeUsers>
  </RecipeDef>


  <!-- ==================== STUNNER NANOTECH AMMO ==================== -->
  <ThingCategoryDef>
    <defName>Ammo_StunnerNanotech</defName>
    <label>stunner nanotech cartridge</label>
    <parent>AmmoRifles</parent>
