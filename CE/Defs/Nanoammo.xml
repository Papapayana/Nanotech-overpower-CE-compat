  </ThingCategoryDef>

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_StunnerNano</defName>
    <label>stunner nanotech cartridge</label>
    <ammoTypes>
      <Ammo_StunnerNano>CE_StunnerNano</Ammo_StunnerNano>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>

  <ThingDef Class="CombatExtended.AmmoDef" Name="Ammo_StunnerNanoBase" ParentName="SmallAmmoBase" Abstract="True">
    <description>Nanotech projectile designed to incapacitate a single target on impact.</description>
    <statBases>
      <Mass>0.002</Mass>
      <Bulk>0.002</Bulk>
    </statBases>
    <thingCategories>
      <li>Ammo_StunnerNanotech</li>
    </thingCategories>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="Ammo_StunnerNanoBase">
    <defName>Ammo_StunnerNano</defName>
    <label>stunner nanotech cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Ion</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.2</MarketValue>
    </statBases>
    <ammoClass>Energy</ammoClass>
    <cookOffProjectile>CE_StunnerNano</cookOffProjectile>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>CE_StunnerNano</defName>
    <label>stunner nanotech bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>5</damageAmountBase>
      <armorPenetrationBlunt>2</armorPenetrationBlunt>
      <armorPenetrationSharp>2</armorPenetrationSharp>
      <damageDef>Bullet</damageDef>
      <Stun>1</Stun>
      <speed>180</speed>
    </projectile>
  </ThingDef>

  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_StunnerNano</defName>
    <label>make stunner nanotech cartridge x200</label>
    <jobString>Assembling stunner nanotech cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>NT_Nanobots</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>NT_Nanobots</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_StunnerNano>200</Ammo_StunnerNano>
    </products>
    <workAmount>2</workAmount>
    <recipeUsers>
      <li>Nanofabricator</li>
    </recipeUsers>
  </RecipeDef>


  <!-- ==================== NANOSHOT (SHOTGUN) AMMO ==================== -->
  <ThingCategoryDef>
    <defName>Ammo_Nanoshot</defName>
    <label>nanoshot shell</label>
    <parent>AmmoShotguns</parent>
    <iconPath>Things/Ammo/Charged/MediumIon</iconPath>
  </ThingCategoryDef>

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_Nanoshot</defName>
    <label>nanoshot shell</label>
    <ammoTypes>
      <Ammo_NanoshotShell>CE_NanoshotPellet</Ammo_NanoshotShell>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>

  <ThingDef Class="CombatExtended.AmmoDef" Name="Ammo_NanoshotBase" ParentName="ShotgunShellBase" Abstract="True">
    <description>Nanotechnological shotgun shell containing a swarm of self-guiding pellets.</description>
    <statBases>
      <Mass>0.005</Mass>
      <Bulk>0.005</Bulk>
    </statBases>
    <thingCategories>
      <li>Ammo_Nanoshot</li>
    </thingCategories>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="Ammo_NanoshotBase">
    <defName>Ammo_NanoshotShell</defName>
    <label>nanoshot shell</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Ion</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.15</MarketValue>
    </statBases>
    <ammoClass>Pellet</ammoClass>
    <cookOffProjectile>CE_NanoshotPellet</cookOffProjectile>
  </ThingDef>

  <ThingDef Name="CE_NanoshotPelletBase" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>Bullet</damageDef>
      <speed>140</speed>
      <dropsCasings>false</dropsCasings>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="CE_NanoshotPelletBase">
    <defName>CE_NanoshotPellet</defName>
    <label>nanoshot pellet</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>35</damageAmountBase>
      <armorPenetrationSharp>60</armorPenetrationSharp>
      <armorPenetrationBlunt>60</armorPenetrationBlunt>
      <pelletCount>12</pelletCount>
      <spreadMult>1.4</spreadMult>
    </projectile>
  </ThingDef>

  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_Nanoshot</defName>
    <label>make nanoshot shells x250</label>
    <jobString>Assembling nanoshot shells.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>NT_Nanobots</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>NT_Nanobots</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_NanoshotShell>250</Ammo_NanoshotShell>
    </products>
    <workAmount>1</workAmount>
    <recipeUsers>
      <li>Nanofabricator</li>
    </recipeUsers>
  </RecipeDef>

</Defs>
