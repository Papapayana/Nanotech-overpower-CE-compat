<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Replace the NanoStunner's tools with CE ToolCE entries -->
	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[defName="NanoStunner"]/tools
		</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>barrel</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>5</power>
					<cooldownTime>1.2</cooldownTime>
					<armorPenetrationBlunt>2.0</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>stock</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>2</power>
					<cooldownTime>1.5</cooldownTime>
					<armorPenetrationBlunt>1.0</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>muzzle</label>
					<capacities>
						<li>Poke</li>
					</capacities>
					<power>8</power>
					<cooldownTime>1.55</cooldownTime>
					<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>

	<!-- Make NanoStunner Combat Extended compatible -->
	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>NanoStunner</defName>

		<statBases>
			<Mass>0.1</Mass>
			<RangedWeapon_Cooldown>0.01</RangedWeapon_Cooldown>
			<SightsEfficiency>1.0</SightsEfficiency>
			<NightVisionEfficiency_Weapon>1.0</NightVisionEfficiency_Weapon>
			<ShotSpread>0</ShotSpread>
			<SwayFactor>0</SwayFactor>
			<Bulk>0.1</Bulk>
			<WorkToMake>150</WorkToMake>
		</statBases>

		<costList>
			<NT_Nanobots>2</NT_Nanobots>
		</costList>

		<Properties>
			<recoilAmount>0</recoilAmount>
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>CE_StunnerNano</defaultProjectile>
			<warmupTime>0.01</warmupTime>
			<range>45</range>
			<ticksBetweenBurstShots>1</ticksBetweenBurstShots>
			<burstShotCount>12</burstShotCount>
			<soundCast>ChargeLance_Fire</soundCast>
			<soundCastTail>GunTail_Light</soundCastTail>
			<muzzleFlashScale>6</muzzleFlashScale>
			<targetParams>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
		</Properties>

		<AmmoUser>
			<magazineSize>150</magazineSize>
			<reloadTime>6</reloadTime>
			<ammoSet>AmmoSet_StunnerNano</ammoSet>
			<reloadOneAtATime>true</reloadOneAtATime>
		</AmmoUser>

		<FireModes>
			<aimedBurstShotCount>3</aimedBurstShotCount>
			<aiUseBurstMode>true</aiUseBurstMode>
			<aiAimMode>AimedShot</aiAimMode>
			<noSingleShot>false</noSingleShot>
			<noSnapshot>true</noSnapshot>
		</FireModes>

		<weaponTags>
			<li>CE_Stunner</li>
			<li>SpacerGun</li>
			<li>HiTechGun</li>
			<li>CE_AI_NanoWeapon</li>
		</weaponTags>

		<researchPrerequisite>Nanotechnology</researchPrerequisite>
		<AllowWithRunAndGun>false</AllowWithRunAndGun>
	</Operation>

</Patch>

