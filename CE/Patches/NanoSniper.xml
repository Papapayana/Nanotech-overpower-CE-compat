<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Replace the NanoSniper's tools with CE-compatible ToolCE melee entries -->
	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[defName="NanoSniper"]/tools
		</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>barrel</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>15</power>
					<cooldownTime>1.5</cooldownTime>
					<armorPenetrationBlunt>4.0</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>stock</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>10</power>
					<cooldownTime>1.8</cooldownTime>
					<armorPenetrationBlunt>2.5</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>muzzle</label>
					<capacities>
						<li>Poke</li>
					</capacities>
					<power>8</power>
					<cooldownTime>1.55</cooldownTime>
					<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>

	<!-- Make NanoSniper Combat Extended compatible -->
	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>NanoSniper</defName>

		<statBases>
			<Mass>0.1</Mass>
			<RangedWeapon_Cooldown>0.2</RangedWeapon_Cooldown>
			<SightsEfficiency>2.0</SightsEfficiency>
			<NightVisionEfficiency_Weapon>1.5</NightVisionEfficiency_Weapon>
			<ShotSpread>0</ShotSpread>
			<SwayFactor>0</SwayFactor>
			<Bulk>0.1</Bulk>
			<WorkToMake>180</WorkToMake>
		</statBases>

		<costList>
			<NT_Nanobots>3</NT_Nanobots>
		</costList>

		<Properties>
			<recoilAmount>0</recoilAmount>
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>CE_Nanobullet</defaultProjectile>
			<warmupTime>3.5</warmupTime>
			<range>65</range>
			<ticksBetweenBurstShots>1</ticksBetweenBurstShots>
			<burstShotCount>1</burstShotCount>
			<soundCast>ChargeLance_Fire</soundCast>
			<soundCastTail>GunTail_Heavy</soundCastTail>
			<muzzleFlashScale>15</muzzleFlashScale>
			<targetParams>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
		</Properties>

		<AmmoUser>
			<magazineSize>20</magazineSize>
			<reloadTime>8</reloadTime>
			<ammoSet>AmmoSet_Nanotech</ammoSet>
			<reloadOneAtATime>true</reloadOneAtATime>
		</AmmoUser>

		<FireModes>
			<aimedBurstShotCount>1</aimedBurstShotCount>
			<aiUseBurstMode>true</aiUseBurstMode>
			<aiAimMode>AimedShot</aiAimMode>
			<noSingleShot>false</noSingleShot>
			<noSnapshot>true</noSnapshot>
		</FireModes>

		<weaponTags>
			<li>CE_Sniper</li>
			<li>SpacerGun</li>
			<li>HiTechGun</li>
			<li>CE_AI_NanoWeapon</li>
		</weaponTags>

		<researchPrerequisite>Nanotechnology</researchPrerequisite>
		<AllowWithRunAndGun>false</AllowWithRunAndGun>
	</Operation>

</Patch>

