<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Replace the NanoMinigun's tools with CE-compatible ToolCE melee entries -->
	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[defName="NanoMinigun"]/tools
		</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>barrel cluster</label>
					<capacities>
						<li>Blunt</li>
						<li>Poke</li>
					</capacities>
					<power>12</power>
					<cooldownTime>0.9</cooldownTime>
					<armorPenetrationBlunt>3.0</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>stock</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>8</power>
					<cooldownTime>1.2</cooldownTime>
					<armorPenetrationBlunt>2.0</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>

	<!-- Make NanoMinigun Combat Extended compatible -->
	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>NanoMinigun</defName>

		<statBases>
			<Mass>0.1</Mass>
			<RangedWeapon_Cooldown>0.1</RangedWeapon_Cooldown>
			<SightsEfficiency>2.0</SightsEfficiency>
			<NightVisionEfficiency_Weapon>1.5</NightVisionEfficiency_Weapon>
			<ShotSpread>0</ShotSpread>
			<SwayFactor>0</SwayFactor>
			<Bulk>0.1</Bulk>
			<WorkToMake>200</WorkToMake>
		</statBases>

		<costList>
			<NT_Nanobots>2</NT_Nanobots>
		</costList>

		<Properties>
			<recoilAmount>0</recoilAmount>
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>CE_Nanobullet</defaultProjectile>
			<warmupTime>0.01</warmupTime>
			<range>30</range>
			<ticksBetweenBurstShots>3</ticksBetweenBurstShots>
			<burstShotCount>35</burstShotCount>
			<soundCast>Shot_MachinePistol</soundCast>
			<soundCastTail>GunTail_Light</soundCastTail>
			<muzzleFlashScale>6</muzzleFlashScale>
			<targetParams>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
		</Properties>

		<AmmoUser>
			<magazineSize>200</magazineSize>
			<reloadTime>8</reloadTime>
			<ammoSet>AmmoSet_Nanotech</ammoSet>
			<reloadOneAtATime>false</reloadOneAtATime>
		</AmmoUser>

		<FireModes>
			<aimedBurstShotCount>3</aimedBurstShotCount>
			<aiUseBurstMode>true</aiUseBurstMode>
			<aiAimMode>SuppressFire</aiAimMode>
			<noSingleShot>true</noSingleShot>
			<noSnapshot>true</noSnapshot>
		</FireModes>

		<weaponTags>
			<li>CE_MachineGun</li>
			<li>SpacerGun</li>
			<li>HiTechGun</li>
			<li>CE_AI_NanoWeapon</li>
		</weaponTags>

		<researchPrerequisite>Nanotechnology</researchPrerequisite>
		<AllowWithRunAndGun>true</AllowWithRunAndGun>
	</Operation>

</Patch>
