<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[HYE] Nanotech Overpower</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="NanoHelmet"]/statBases</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="NanoHelmet"]</xpath>
            <value>
              <statBases />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="NanoHelmet"]/statBases</xpath>
          <value>
            <statBases>
              <MaxHitPoints>99999</MaxHitPoints>
              <Flammability>0</Flammability>
              <DeteriorationRate>0</DeteriorationRate>
              <Beauty>-3</Beauty>
              <Mass>0.1</Mass>
              <ArmorRating_Sharp>9999</ArmorRating_Sharp>
              <ArmorRating_Blunt>9999</ArmorRating_Blunt>
              <ArmorRating_Heat>9999</ArmorRating_Heat>
              <Comfort>50</Comfort>
              <Insulation_Cold>1000</Insulation_Cold>
              <Insulation_Heat>1000</Insulation_Heat>
              <EquipDelay>0.1</EquipDelay>
            </statBases>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="NanoHelmet"]</xpath>
          <value>
            <li Class="CombatExtended.PartialArmorExt">
              <stats />
            </li>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="NanoHelmet"]/equippedStatOffsets</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="NanoHelmet"]</xpath>
            <value>
              <equippedStatOffsets />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="NanoHelmet"]/equippedStatOffsets</xpath>
          <value>
            <equippedStatOffsets>
              <VacuumResistance>1</VacuumResistance>
              <ToxicEnvironmentResistance>1</ToxicEnvironmentResistance>
              <MechBandwidth>120</MechBandwidth>
            </equippedStatOffsets>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>